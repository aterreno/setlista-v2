#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run backend tests and coverage (temporarily disabled due to config issues)
echo "📦 Testing backend..."
cd backend
# npm test
# if [ $? -ne 0 ]; then
#   echo "❌ Backend tests failed. Commit aborted."
#   exit 1
# fi

# npm run test:coverage
# if [ $? -ne 0 ]; then
#   echo "❌ Backend coverage threshold not met. Commit aborted."
#   exit 1
# fi

# Run frontend tests and linting
echo "🎨 Testing frontend..."
cd ../frontend
npm test -- --watchAll=false
if [ $? -ne 0 ]; then
  echo "❌ Frontend tests failed. Commit aborted."
  exit 1
fi

npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Frontend linting failed. Commit aborted."
  exit 1
fi

echo "✅ All checks passed! Proceeding with commit..."