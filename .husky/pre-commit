#!/usr/bin/env bash
echo "ğŸ” Running pre-commit checks..."

# Ensure node_modules/.bin is in PATH
export PATH="$(pwd)/node_modules/.bin:$(pwd)/backend/node_modules/.bin:$(pwd)/frontend/node_modules/.bin:$PATH"

# Find the right npx to use
if command -v npx &> /dev/null; then
    NPX_CMD="npx"
elif [ -x "$(pwd)/node_modules/.bin/npx" ]; then
    NPX_CMD="$(pwd)/node_modules/.bin/npx"
elif [ -x "$(pwd)/backend/node_modules/.bin/npx" ]; then
    NPX_CMD="$(pwd)/backend/node_modules/.bin/npx"
elif [ -x "$(pwd)/frontend/node_modules/.bin/npx" ]; then
    NPX_CMD="$(pwd)/frontend/node_modules/.bin/npx"
else
    echo "âŒ Could not find npx. Please ensure it's installed."
    exit 1
fi

# Run backend TypeScript compilation check
echo "ğŸ” Checking backend TypeScript compilation..."
cd backend
$NPX_CMD tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ Backend TypeScript compilation failed. Commit aborted."
  exit 1
fi

# Run backend linting
echo "ğŸ” Linting backend..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Backend linting failed. Commit aborted."
  exit 1
fi

# Run backend tests and coverage
echo "ğŸ“¦ Testing backend..."
npm test
if [ $? -ne 0 ]; then
  echo "âŒ Backend tests failed. Commit aborted."
  exit 1
fi

npm run test:coverage
if [ $? -ne 0 ]; then
  echo "âŒ Backend coverage threshold not met. Commit aborted."
  exit 1
fi

# Run frontend TypeScript compilation check
echo "ğŸ¨ Checking frontend TypeScript compilation..."
cd ../frontend
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ Frontend TypeScript compilation failed. Commit aborted."
  exit 1
fi

# Run frontend linting
echo "ğŸ¨ Linting frontend..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Frontend linting failed. Commit aborted."
  exit 1
fi

echo "ğŸ¨ Testing frontend..."
npm test -- --watchAll=false
if [ $? -ne 0 ]; then
  echo "âŒ Frontend tests failed. Commit aborted."
  exit 1
fi

# Run infra TypeScript compilation check
echo "ğŸ—ï¸ Checking infra TypeScript compilation..."
cd ../infra
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ Infra TypeScript compilation failed. Commit aborted."
  exit 1
fi

echo "âœ… All checks passed! Proceeding with commit..."